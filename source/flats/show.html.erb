<% flat = data.flats[owner] %>

<div class="banner-sm" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-detail">
          <div class="header-flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-sm" %>
            <p><%= owner %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <div class="rating">
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
              <i class="fa fa-star" style="color: #ffb400"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="">
          <h4>Book this flat</h4>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <input type="text" class="form-control" id="checkin" placeholder="checkin">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <input type="text" class="form-control" id="checkout" placeholder="checkout">
              </div>
            </div>
            <select id name="guests" class="form-control form-group">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" class="btn btn-danger" id="btn-full" value="Book it">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h1>
          About this flat
        </h1>
        <p>
          This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.
        </p>
        <hr>
        <div class="row" id="flat-data">
          <div class="flat-description-first-row">
            <p>
              The Space
            </p>
            <ul>
              <li>Accommodates: <strong>2</strong></li>
              <li>Bathrooms: <strong>1</strong></li>
              <li>Bed type: <strong>Real Bed</strong></li>
              <li>Bedrooms: <strong>1</strong></li>
            </ul>
            <ul>
              <li>Beds: <strong>1</strong></li>
              <li>Property type: <strong>Appartment</strong></li>
              <li>Room type: <strong>Entire home/apt</strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">

        </div>
      </div>
    </div>
  </div>
</div>

